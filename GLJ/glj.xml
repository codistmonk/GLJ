<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project GLJ">
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">
        <jar destfile="glj.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="glj.demo.Launcher"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset file="glj_license.txt"/>
            <fileset dir="bin"/>
            <fileset dir="src"/>
            <fileset dir="demo"/>
            <fileset includes="lib/jogamp/**" dir="."/>
            <zipfileset excludes="META-INF/*.SF" src="lib/aprog.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/vecmath-1.5.2.jar"/>
        	<zipfileset excludes="META-INF/*.SF" src="lib/jogamp/gluegen-rt.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/jogamp/gluegen.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/jogamp/joal.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/jogamp/jogl.all.jar"/>
        </jar>
    </target>
</project>
